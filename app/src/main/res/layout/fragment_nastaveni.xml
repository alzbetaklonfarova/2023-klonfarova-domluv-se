<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NastaveniFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/editheslo"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:hint="Potvrďte heslo"
        android:inputType="textPassword"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/editnoveheslo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zmenitHeslo"
        app:layout_constraintVertical_bias="0.234" />

    <EditText
        android:id="@+id/editnoveheslo"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Nové heslo"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editheslo" />

    <TextView
        android:id="@+id/zmenitHeslo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Změnit heslo"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/editheslo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soucasne"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Současné heslo"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editheslo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/noveHeslo"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Nové heslo"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/editnoveheslo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editnoveheslo" />

    <Button
        android:id="@+id/zmenit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Změnit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editnoveheslo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        android:onClick="ZmenitHeslo" />

</androidx.constraintlayout.widget.ConstraintLayout>